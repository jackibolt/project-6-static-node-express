extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= currentProject.project_name
        p.lead.text-light
          | #{currentProject.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each tech in currentProject.technologies
            li= tech

        a.button.expanded(target="_blank", href=`${currentProject.live_link}`) Live Demo
        a.button.expanded(target="_blank", href=`${currentProject.github_link}`) GitHub Repo
    
    img.image(src=`${currentProject.img_urls[1]}`)
    img.image(src=`${currentProject.img_urls[2]}`)